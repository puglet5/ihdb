{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "alwaysStrict": false,
    "useDefineForClassFields": false,
    "moduleResolution": "nodenext",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "./",
    "outDir": "app/assets/builds",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
    ]
  },
  "include": [
    "app/javascript/**/*"
  ],
  "exclude": [
    "app/assets/builds",
    "node_modules",
    "coverage",
    "lib"
  ]
}
