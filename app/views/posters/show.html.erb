<div class="text-center">
  <%= @poster.title %>
  <%= @poster.description %>

  <div class="flex flex-wrap space-x-2 space-y-2">
    <% @poster.images.each do |image| %>
      <%= image_tag original_or_variant(image.image, image.image.variant(:thumb)) %>
    <% end %>
  </div>

  <%= link_to 'Edit', [:edit, @poster] %>
  <%= link_to 'Delete', @poster, data: { turbo_method: :delete, turbo_confirm: "Are you sure ?" } %>
</div>
